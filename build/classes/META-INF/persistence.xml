		<class>com.rentalx.account.Organization</class>
		<class>com.rentalx.account.PersonalDocument</class>
		<class>com.rentalx.account.Supplier</class>
		
		<class>com.rentalx.vehicle.Car</class>
		<class>com.rentalx.vehicle.CarDocument</class>
		<class>com.rentalx.vehicle.Traffic</class>
		<class>com.rentalx.vehicle.Maintenance</class>
		
		<class>com.rentalx.rental.Booking</class>
		

	</persistence-unit>
	
	

</persistence>
